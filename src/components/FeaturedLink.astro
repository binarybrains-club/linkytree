---
interface Props {
  href: string;
  title: string;
  subtitle: string;
}

const { href, title, subtitle } = Astro.props;
---

<a href={href} target='_blank' rel='noopener noreferrer' class='link-card block text-center'>
  <div class='font-display font-semibold text-foreground'>{title}</div>
  <div class='text-sm text-muted-foreground'>{subtitle}</div>
</a>
