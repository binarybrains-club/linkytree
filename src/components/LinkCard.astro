---
interface Props {
  href: string;
  title: string;
  subtitle: string;
  trailingIcon?: string;
}

const { href, title, subtitle, trailingIcon } = Astro.props;
---

<a
  {href}
  target="_blank"
  rel="noopener noreferrer"
  class="link-card group flex items-center gap-4 w-full"
>
  <div class="flex-1 min-w-0">
    <h3
      class="font-display font-semibold text-foreground group-hover:text-primary transition-colors"
    >
      {title}
    </h3>
    <p class="text-sm text-muted-foreground truncate">{subtitle}</p>
  </div>
  {
    trailingIcon && (
      <span class="text-sm text-muted-foreground">{trailingIcon}</span>
    )
  }
</a>
